            { "color": "green", "value": null },
            { "color": "yellow", "value": 1 },
            { "color": "red", "value": 5 }
          ]
        }
      },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{status=~\"4..|5..\"}[$__rate_interval])) / sum(rate(http_requests_total[$__rate_interval])))",
