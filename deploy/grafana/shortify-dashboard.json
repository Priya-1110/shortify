      "targets": [
        {
          "expr": "sum(rate(http_request_latency_seconds_sum[$__rate_interval])) / sum(rate(http_request_latency_seconds_count[$__rate_interval]))",
          "legendFormat": "avg",
          "refId": "A"
        }
      ]
    },
